generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  admin
  teacher
  student
}

enum UserStatus {
  active
  inactive
}

enum ExerciseDifficulty {
  easy
  medium
  hard
}

model User {
  id           String     @id @default(uuid()) @db.Uuid
  email        String     @unique
  passwordHash String?    @map("password_hash")
  fullName     String     @map("full_name")
  role         UserRole
  level        String     @default("")
  isGeneral    Boolean    @default(true) @map("is_general")
  status       UserStatus @default(active)
  teacherId    String?    @map("teacher_id") @db.Uuid
  createdAt    DateTime   @default(now()) @map("created_at")
  updatedAt    DateTime   @updatedAt @map("updated_at")

  // Relations
  sessions    Session[]
  exercises   Exercise[]
  submissions Submission[]
  studentToken StudentToken?
  teacher     User?        @relation("TeacherStudents", fields: [teacherId], references: [id], onDelete: SetNull)
  students    User[]       @relation("TeacherStudents")
  
  // Exercise Access Relations
  studentExercises     StudentExerciseAccess[] @relation("StudentAccess")
  assignedExercises    StudentExerciseAccess[] @relation("TeacherAssignments")

  @@map("users")
}

model Session {
  id        String   @id @default(uuid()) @db.Uuid
  userId    String   @map("user_id") @db.Uuid
  expiresAt DateTime @map("expires_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model Exercise {
  id          String             @id @default(uuid()) @db.Uuid
  teacherId   String             @map("teacher_id") @db.Uuid
  title       String
  description String?
  exercises   Json
  difficulty  ExerciseDifficulty
  tags        Json               @default("[]")
  role        UserRole
  level       String
  isGeneral   Boolean            @default(true) @map("is_general")
  isPublished Boolean            @default(false) @map("is_published")
  createdAt   DateTime           @default(now()) @map("created_at")
  updatedAt   DateTime           @updatedAt @map("updated_at")

  // Relations
  teacher     User         @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  submissions Submission[]
  studentAccess StudentExerciseAccess[]

  @@map("exercises")
}

model StudentToken {
  id        String    @id @default(uuid()) @db.Uuid
  studentId String    @unique @map("student_id") @db.Uuid
  token     String    @unique
  expiresAt DateTime? @map("expires_at")
  createdAt DateTime  @default(now()) @map("created_at")

  // Relations
  student User @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@map("student_tokens")
}

model Submission {
  id             String   @id @default(uuid()) @db.Uuid
  exerciseId     String   @map("exercise_id") @db.Uuid
  studentId      String   @map("student_id") @db.Uuid
  answers        Json
  corrections    Json
  score          Int
  totalQuestions Int      @map("total_questions")
  attempt        Int      @default(1)
  createdAt      DateTime @default(now()) @map("created_at")

  // Relations
  exercise Exercise @relation(fields: [exerciseId], references: [id], onDelete: Cascade)
  student  User     @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@map("submissions")
}

model StudentExerciseAccess {
  id          String    @id @default(uuid()) @db.Uuid
  studentId   String    @map("student_id") @db.Uuid
  exerciseId  String    @map("exercise_id") @db.Uuid
  assignedAt  DateTime  @default(now()) @map("assigned_at")
  assignedBy  String    @map("assigned_by") @db.Uuid
  dueDate     DateTime? @map("due_date")
  isActive    Boolean   @default(true) @map("is_active")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  // Relations
  student           User     @relation("StudentAccess", fields: [studentId], references: [id], onDelete: Cascade)
  exercise          Exercise @relation(fields: [exerciseId], references: [id], onDelete: Cascade)
  assignedByTeacher User     @relation("TeacherAssignments", fields: [assignedBy], references: [id], onDelete: Cascade)

  @@unique([studentId, exerciseId])
  @@map("student_exercise_access")
}
